# Activar la reescritura de URLs
RewriteEngine On

# Configuraci칩n b치sica para redirigir a index.php si el archivo o carpeta no existe
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]
RewriteRule ^vistas/(.*)$ vistas/$1 [L]


# Establecer index.php como archivo principal
DirectoryIndex index.php

# Permitir la interpretaci칩n de errores y activar m칩dulos PHP
<IfModule mod_php.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
</IfModule>